# Should the bot update the Twitter feed?
TWITTER=false

# Twitter account credentials
TWITTER_CONSUMER_KEY=
TWITTER_CONSUMER_SECRET=
TWITTER_ACCESS_TOKEN_KEY=
TWITTER_ACCESS_TOKEN_SECRET=

# This package uses Mongoose as database handler so mongodb is mandatory
DATABASE_URL=mongodb://127.0.0.1:27017/deforestation

# Should the bot log to console it's routine?
LOGGING=true

# Miliseconds of delay between calls to GFW API
# This has been tested to be the safest minimum delay to prevent data loss
DELAY_MS=400

# In case the database is empty, this will be the starting date of alerts for the bot
# The bot will default to the currently last issued alert
START_DATE=
